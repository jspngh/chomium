{
    "manifest_version": 2,

    "name": "Chomium",
    "description": "A better new tab",
    "version": "0.1",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions" : [
      "management",
      "topsites"
    ],
    "chrome_url_overrides" : {
        "newtab": "newtab.html"
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
    "content_scripts": [{
     "js": [
       "popup.js",
       "newtab.js"
     ],
     "matches": ["http://*/*", "https://*/*"]
   }]
}
